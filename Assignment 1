    // a digit.
    Scanner keyboard = new Scanner(System.in);
    String number = keyboard.nextLine();
    //Complete the rest of this method.
  }
	
  private void add(String number, int d) {
    //Complete the this method. At the end of this method
    //print the result.
  }
}

